{
    "name": "15web/symfony-starter-kit",
    "description": "Starter kit for symfony projects",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/annotations": "^1.0",
        "doctrine/doctrine-bundle": "^2.6",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^2.12",
        "phpdocumentor/reflection-docblock": "^5.3",
        "phpstan/phpdoc-parser": "^1.5",
        "sensio/framework-extra-bundle": "^6.2",
        "symfony/console": "6.1.*",
        "symfony/dotenv": "6.1.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "6.1.*",
        "symfony/mailer": "6.1.*",
        "symfony/messenger": "6.1.*",
        "symfony/monolog-bundle": "^3.8",
        "symfony/property-access": "6.1.*",
        "symfony/property-info": "6.1.*",
        "symfony/proxy-manager-bridge": "6.1.*",
        "symfony/rate-limiter": "6.1.*",
        "symfony/runtime": "6.1.*",
        "symfony/security-bundle": "6.1.*",
        "symfony/serializer": "6.1.*",
        "symfony/twig-bundle": "6.1.*",
        "symfony/uid": "6.1.*",
        "symfony/yaml": "6.1.*",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2.12|^3.0",
        "webmozart/assert": "^1.10"
    },
    "require-dev": {
        "cebe/php-openapi": "^1.7",
        "dama/doctrine-test-bundle": "^7.1",
        "friendsofphp/php-cs-fixer": "^3.8",
        "league/openapi-psr7-validator": "^0.18.0",
        "nyholm/psr7": "^1.5",
        "phpstan/phpstan": "^1.7",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.2",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "slevomat/coding-standard": "^7.2",
        "squizlabs/php_codesniffer": "^3.6",
        "symfony/browser-kit": "6.1.*",
        "symfony/css-selector": "6.1.*",
        "symfony/phpunit-bridge": "^6.1",
        "symfony/psr-http-message-bridge": "^2.1",
        "symfony/stopwatch": "6.1.*",
        "symfony/web-profiler-bundle": "6.1.*"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/",
            "App\\PHPStan\\": "phpstan/",
            "Studio15\\CodeQuality\\PHPCodeSniffer\\": "phpcs/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "stan": "vendor/bin/phpstan analyse -c phpstan-config.neon --ansi",
        "fixer-check": "php-cs-fixer --config=php-cs-fixer-config.php fix --dry-run --diff --ansi -v",
        "fixer-fix": "php-cs-fixer --config=php-cs-fixer-config.php fix --ansi -v",
        "sniffer-check": "phpcs --standard=phpcs.xml,phpcs/ruleset.xml --colors -p",
        "sniffer-fix": "phpcbf --standard=phpcs.xml,phpcs/ruleset.xml --colors -p",
        "twig-lint": "bin/console lint:twig templates",
        "container-lint": "bin/console lint:container",
        "validate-doctrine-schema": "bin/console doctrine:schema:validate",
        "validate-openapi-schema": "vendor/bin/php-openapi validate ./openapi.yaml",
        "cache-prod-check": "bin/console cache:warmup --env=prod",
        "deprications-check": "bin/console debug:container --deprecations",
        "check": [
            "@container-lint",
            "@validate-doctrine-schema",
            "@twig-lint",
            "@stan",
            "@fixer-check",
            "@sniffer-check",
            "@cache-prod-check",
            "@validate-openapi-schema"
        ],
        "fix": ["@fixer-fix", "@sniffer-fix"]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.1.*"
        }
    }
}
